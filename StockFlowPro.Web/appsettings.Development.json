{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=StockFlowProDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "ApiKey": {
    "RequireApiKey": false,
    "HeaderName": "X-API-Key",
    "QueryParameterName": "api_key",
    "ValidApiKeys": [
      "dev-key-12345",
      "mobile-app-dev-key",
      "react-native-dev-key"
    ]
  },
  "ExternalApi": {
    "EnableRateLimiting": false,
    "RateLimitRequests": 1000,
    "RateLimitWindow": "00:01:00",
    "EnableDetailedErrors": true,
    "EnableSwagger": true,
    "CorsPolicy": "DevelopmentCors"
  },
  "Authentication": {
    "SessionTimeout": "08:00:00",
    "RememberMeTimeout": "30.00:00:00",
    "RequireHttps": false,
    "SameSiteMode": "Lax"
  },
  "DataSource": {
    "PrimarySource": "Database",
    "EnableMockDataFallback": true,
    "EnableMockDataSync": true,
    "LogDataSourceUsage": true
  }
}