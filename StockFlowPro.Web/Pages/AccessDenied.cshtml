@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-sm p-4 card-rounded">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="fas fa-lock text-danger icon-large"></i>
            </div>
            <h2 class="fw-bold mb-2 text-danger">Access Denied</h2>
            <p class="text-muted mb-0">You don't have permission to access this resource.</p>
        </div>
        
        <div class="alert alert-warning text-center">
            <strong>Insufficient Privileges</strong><br>
            Your current role (@(User?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Unknown")) 
            does not have the required permissions to view this page.
        </div>
        
        <div class="d-grid gap-2">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-home me-2"></i>Go to Home
            </a>
            
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <a href="/AdminPanel" class="btn btn-outline-secondary">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
            }
            else
            {
                <a href="/Login" class="btn btn-outline-secondary">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
            }
        </div>
        
        <div class="text-center mt-3">
            <small class="text-muted">
                If you believe this is an error, please contact your administrator.
            </small>
        </div>
    </div>
</div>