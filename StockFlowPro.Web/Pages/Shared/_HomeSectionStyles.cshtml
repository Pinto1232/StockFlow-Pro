<script>
    // Smooth Parallax Intersection Observer
    document.addEventListener('DOMContentLoaded', function() {
        // Force hardware acceleration for smooth animations
        const acceleratedElements = document.querySelectorAll('.animate-on-scroll, .features-section, .services-section, .benefits-section, .cta-section');
        acceleratedElements.forEach(el => {
            el.style.transform = 'translateZ(0)';
            el.style.backfaceVisibility = 'hidden';
        });

        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Use requestAnimationFrame for smoother animations
                    requestAnimationFrame(() => {
                        entry.target.classList.add('animate');
                    });
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observe all elements with animation classes
        const animatedElements = document.querySelectorAll('.animate-on-scroll');
        animatedElements.forEach(el => {
            observer.observe(el);
        });

        // Add staggered delay for multiple elements in the same container
        const containers = document.querySelectorAll('.row, .stats-grid, .jumbotron-actions');
        containers.forEach(container => {
            const animatedChildren = container.querySelectorAll('.animate-on-scroll');
            animatedChildren.forEach((child, index) => {
                child.style.transitionDelay = `${index * 0.1}s`;
            });
        });

        // Prevent layout shifts during scroll
        let isScrolling = false;
        window.addEventListener('scroll', () => {
            if (!isScrolling) {
                requestAnimationFrame(() => {
                    isScrolling = false;
                });
                isScrolling = true;
            }
        }, { passive: true });
    });

    // Enhanced smooth scrolling
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Optimize sections for smooth parallax
    const sections = document.querySelectorAll('.features-section, .services-section, .benefits-section, .cta-section');
    sections.forEach(section => {
        section.style.transform = 'translateZ(0)';
        section.style.willChange = 'transform';
        section.style.backfaceVisibility = 'hidden';
        section.style.perspective = '1000px';
    });

    // Prevent content jumping on mobile
    if (window.innerWidth <= 768) {
        const mobileElements = document.querySelectorAll('.animate-on-scroll');
        mobileElements.forEach(el => {
            el.style.transform = 'none';
            el.style.opacity = '1';
            el.classList.add('animate');
        });
    }
</script>