@page
@model DashboardModel
@using StockFlowPro.Web.Authorization
@using StockFlowPro.Web.Extensions
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-layout">
    <!-- Sidebar -->
    <nav class="sidebar-drawer" id="sidebarDrawer" aria-label="Main navigation" role="navigation">
        <div class="sidebar-header">
            <div class="sidebar-brand">
                <i class="fas fa-cube brand-icon"></i>
                <h5 class="sidebar-title">StockFlow Pro</h5>
            </div>
            <button type="button" 
                    class="sidebar-close-btn d-lg-none" 
                    onclick="toggleSidebar()" 
                    aria-label="Close navigation menu"
                    title="Close menu">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="sidebar-user-info">
            <div class="user-avatar">
                <i class="fas fa-user-circle"></i>
                <div class="user-status-dot"></div>
            </div>
            <div class="user-details">
                <span class="user-name">@User.GetFullName()</span>
                <span class="user-role">@User.GetUserRole()</span>
            </div>
        </div>
        
        <div class="sidebar-content">
            <ul class="sidebar-menu">
                <li class="sidebar-menu-item active">
                    <a href="/Dashboard" 
                       class="sidebar-menu-link" 
                       aria-current="page"
                       data-tooltip="Dashboard Overview">
                        <div class="menu-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <span class="menu-text">Dashboard</span>
                        <div class="menu-indicator"></div>
                    </a>
                </li>
                @if (User.HasPermission(Permissions.System.ViewAdminPanel))
                {
                    <li class="sidebar-menu-item">
                        <a href="/AdminPanel" 
                           class="sidebar-menu-link" 
                           data-tooltip="System Administration">
                            <div class="menu-icon">
                                <i class="fas fa-cogs"></i>
                            </div>
                            <span class="menu-text">Admin Panel</span>
                            <div class="menu-indicator"></div>
                        </a>
                    </li>
                }
                @if (User.HasPermission(Permissions.Users.ViewAll))
                {
                    <li class="sidebar-menu-item">
                        <a href="/ManageUsers" 
                           class="sidebar-menu-link" 
                           data-tooltip="User Management">
                            <div class="menu-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <span class="menu-text">Users</span>
                            <div class="menu-indicator"></div>
                        </a>
                    </li>
                }
                @if (User.HasPermission(Permissions.Reports.ViewBasic))
                {
                    <li class="sidebar-menu-item has-submenu">
                        <button type="button" 
                                class="sidebar-menu-link btn btn-link text-start w-100" 
                                onclick="toggleSubmenu(this)"
                                aria-expanded="false"
                                aria-haspopup="true"
                                data-tooltip="Reports & Analytics">
                            <div class="menu-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <span class="menu-text">Reports</span>
                            <i class="fas fa-chevron-down submenu-arrow"></i>
                        </button>
                        <ul class="sidebar-submenu" aria-label="Reports submenu">
                            @if (User.HasPermission(Permissions.Reports.ViewBasic))
                            {
                                <li>
                                    <a href="#" class="sidebar-submenu-link">
                                        <i class="fas fa-chart-line submenu-icon"></i>
                                        Basic Reports
                                    </a>
                                </li>
                            }
                            @if (User.HasPermission(Permissions.Reports.ViewAdvanced))
                            {
                                <li>
                                    <a href="#" class="sidebar-submenu-link">
                                        <i class="fas fa-chart-pie submenu-icon"></i>
                                        Advanced Reports
                                    </a>
                                </li>
                            }
                            @if (User.HasPermission(Permissions.System.ViewStatistics))
                            {
                                <li>
                                    <a href="#" class="sidebar-submenu-link">
                                        <i class="fas fa-analytics submenu-icon"></i>
                                        Statistics
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
            
            <div class="sidebar-footer">
                <div class="sidebar-divider"></div>
                <div class="sidebar-help">
                    <a href="#" class="help-link" data-tooltip="Help & Support">
                        <i class="fas fa-question-circle"></i>
                        <span>Help & Support</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content-area">
        <!-- Mobile Header -->
        <div class="d-lg-none mobile-header">
            <button class="mobile-menu-btn" 
                    type="button" 
                    onclick="toggleSidebar()"
                    aria-label="Open navigation menu"
                    title="Open menu">
                <div class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <span class="menu-text">Menu</span>
            </button>
            <div class="mobile-brand">
                <i class="fas fa-cube"></i>
                <span>StockFlow Pro</span>
            </div>
        </div>

        <div class="dashboard-content">
            <div class="content-wrapper">
                <!-- Header -->
                <section class="dashboard-header">
                    <div class="header-content">
                        <h1 class="dashboard-title">
                            <i class="fas fa-tachometer-alt me-3"></i>
                            Dashboard
                        </h1>
                        <p class="dashboard-subtitle">Welcome back, @User.GetFullName() (@User.GetUserRole())</p>
                    </div>
                </section>

                <!-- Admin Section -->
                @if (User.HasPermission(Permissions.System.ViewAdminPanel) || User.HasPermission(Permissions.Users.ViewAll) || User.HasPermission(Permissions.Reports.ViewBasic))
                {
                    <section class="admin-section">
                        <h2 class="section-title">
                            <i class="fas fa-tools me-2"></i>
                            Admin Tools
                        </h2>
                        <div class="cards-grid">
                            @if (User.HasPermission(Permissions.System.ViewAdminPanel))
                            {
                                <div class="card-item">
                                    <div class="dashboard-card">
                                        <div class="card-content">
                                            <div class="card-icon"><i class="fas fa-cogs"></i></div>
                                            <h3 class="card-title">Admin Panel</h3>
                                            <p class="card-description">Access system settings and advanced configuration.</p>
                                            <a href="/AdminPanel" class="card-button btn btn-primary">Go to Admin Panel</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (User.HasPermission(Permissions.Users.ViewAll))
                            {
                                <div class="card-item">
                                    <div class="dashboard-card">
                                        <div class="card-content">
                                            <div class="card-icon"><i class="fas fa-users"></i></div>
                                            <h3 class="card-title">Manage Users</h3>
                                            <p class="card-description">Manage user accounts, roles, and permissions.</p>
                                            <a href="/ManageUsers" class="card-button btn btn-success">Go to Users</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (User.HasPermission(Permissions.Reports.ViewBasic))
                            {
                                <div class="card-item">
                                    <div class="dashboard-card">
                                        <div class="card-content">
                                            <div class="card-icon"><i class="fas fa-chart-line"></i></div>
                                            <h3 class="card-title">View Reports</h3>
                                            <p class="card-description">Access sales, inventory, and performance reports.</p>
                                            <a href="#" class="card-button btn btn-info">Go to Reports</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </section>
                }
                else
                {
                    <div class="no-access-message">
                        <div class="alert alert-warning text-center">
                            You do not have access to any administrative features.
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>
</div>
<style>
    /* Prevent horizontal scrolling */
    html, body {
        overflow-x: hidden;
        max-width: 100%;
    }
    
    *, *::before, *::after {
        box-sizing: border-box;
    }
    
    /* Dashboard Layout - Full Width Fluid */
    .dashboard-layout {
        display: flex;
        min-height: 100vh;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        position: relative;
        background: #f4f6fb;
        overflow-x: hidden;
        font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
    }
    
    /* Sidebar Styles */
    .sidebar-drawer {
        width: 280px;
        background: linear-gradient(135deg, #5a5cdb 0%, #7f53ac 100%);
        color: white;
        position: fixed;
        top: 0;
        left: -280px;
        height: 100vh;
        z-index: 1040;
        transition: left 0.3s cubic-bezier(.4,0,.2,1);
        box-shadow: 2px 0 24px rgba(0,0,0,0.08);
        overflow-y: auto;
        overflow-x: hidden;
        border-top-right-radius: 24px;
        border-bottom-right-radius: 24px;
    }
    
    .sidebar-drawer.show {
        left: 0;
    }
    
    /* Main Content Area */
    .main-content-area {
        flex: 1;
        min-height: 100vh;
        transition: margin-left 0.3s cubic-bezier(.4,0,.2,1);
        background: #f4f6fb;
        overflow-x: hidden;
        overflow-y: auto;
    }
    
    /* Enhanced Mobile Header */
    .mobile-header {
        padding: 1rem 1.5rem;
        background: #fff;
        border-bottom: 1px solid #e5e7ef;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .mobile-menu-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, #5a5cdb 0%, #7f53ac 100%);
        color: #fff;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(90,92,219,0.2);
    }
    
    .mobile-menu-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(90,92,219,0.3);
    }
    
    .hamburger-icon {
        display: flex;
        flex-direction: column;
        gap: 3px;
        width: 18px;
    }
    
    .hamburger-icon span {
        height: 2px;
        background: #fff;
        border-radius: 1px;
        transition: all 0.3s ease;
    }
    
    .mobile-menu-btn:hover .hamburger-icon span:nth-child(1) {
        transform: translateY(1px);
    }
    
    .mobile-menu-btn:hover .hamburger-icon span:nth-child(3) {
        transform: translateY(-1px);
    }
    
    .menu-text {
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .mobile-brand {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #5a5cdb;
        font-weight: 700;
        font-size: 1.1rem;
    }
    
    .mobile-brand i {
        font-size: 1.3rem;
    }
    
    @@media (min-width: 992px) {
        .main-content-area {
            margin-left: 280px;
        }
    }
    
    /* Dashboard Content */
    .dashboard-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    
    .content-wrapper {
        flex: 1;
        padding: 2.5rem 1.5rem 2.5rem 1.5rem;
        max-width: 100%;
        overflow-x: hidden;
    }
    
    /* Header Section */
    .dashboard-header {
        margin-bottom: 2.5rem;
    }
    
    .header-content {
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.07);
        border: 1px solid #e5e7ef;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .dashboard-title {
        font-size: 2.7rem;
        font-weight: 800;
        color: #232946;
        margin-bottom: 0.25rem;
        display: flex;
        align-items: center;
        letter-spacing: -1px;
    }
    
    .dashboard-title i {
        color: #5a5cdb;
    }
    
    .dashboard-subtitle {
        font-size: 1.15rem;
        color: #6c7a89;
        margin: 0;
        line-height: 1.6;
        font-weight: 500;
    }
    
    /* Admin Section */
    .admin-section {
        margin-bottom: 3.5rem;
    }
    
    .section-title {
        font-size: 2rem;
        font-weight: 700;
        color: #3d3d63;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        border-bottom: 2px solid #e5e7ef;
        padding-bottom: 0.75rem;
        gap: 0.5rem;
    }
    
    /* Cards Grid */
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
        width: 100%;
        overflow: hidden;
    }
    
    .card-item {
        display: flex;
    }
    
    .dashboard-card {
        background: linear-gradient(135deg, #fff 60%, #f4f6fb 100%);
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(90,92,219,0.07);
        border: 1px solid #e5e7ef;
        transition: box-shadow 0.3s cubic-bezier(.4,0,.2,1), transform 0.3s cubic-bezier(.4,0,.2,1);
        width: 100%;
        max-width: 100%;
        overflow: hidden;
        box-sizing: border-box;
        position: relative;
    }
    
    .dashboard-card:hover {
        transform: translateY(-6px) scale(1.02);
        box-shadow: 0 16px 40px rgba(90,92,219,0.13);
    }
    
    .card-content {
        padding: 2.2rem 1.5rem 2rem 1.5rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        height: 100%;
        gap: 0.5rem;
    }
    
    .card-icon {
        font-size: 2.7rem;
        margin-bottom: 0.7rem;
        opacity: 0.92;
        color: #5a5cdb;
        background: #f4f6fb;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 2px 8px rgba(90,92,219,0.07);
    }
    
    .card-title {
        font-size: 1.18rem;
        font-weight: 700;
        color: #232946;
        margin-bottom: 0.5rem;
    }
    
    .card-description {
        color: #6c7a89;
        font-size: 1.01rem;
        line-height: 1.6;
        margin-bottom: 1.2rem;
        flex-grow: 1;
    }
    
    .card-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.7rem 1.3rem;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.2s;
        border: none;
        cursor: pointer;
        width: 100%;
        box-shadow: 0 2px 8px rgba(90,92,219,0.07);
        letter-spacing: 0.01em;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #5a5cdb 0%, #7f53ac 100%);
        color: #fff;
    }
    
    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: #fff;
    }
    
    .btn-info {
        background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
        color: #fff;
    }
    
    .card-button:hover, .card-button:focus {
        transform: translateY(-2px) scale(1.01);
        box-shadow: 0 4px 16px rgba(90,92,219,0.13);
        color: #fff;
        text-decoration: none;
        outline: none;
    }
    
    /* No Access Message */
    .no-access-message {
        text-align: center;
        padding: 2.5rem 1rem;
    }
    
    .no-access-message .alert {
        background: #fff;
        border: 1px solid #e5e7ef;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    }
    
    /* Responsive Design */
    @@media (min-width: 992px) {
        .sidebar-drawer {
            left: 0;
        }
        .main-content-area {
            margin-left: 280px;
        }
        .content-wrapper {
            padding: 3rem 4rem;
        }
        .cards-grid {
            grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
            gap: 2.2rem;
        }
    }
    
    @@media (min-width: 1200px) {
        .content-wrapper {
            padding: 3rem 6rem;
        }
        .dashboard-title {
            font-size: 3.2rem;
        }
        .cards-grid {
            grid-template-columns: repeat(auto-fit, minmax(370px, 1fr));
        }
    }
    
    @@media (max-width: 991.98px) {
        .dashboard-layout {
            margin-left: calc(-50vw + 50%);
        }
        .main-content-area {
            margin-left: 0;
        }
        .dashboard-title {
            font-size: 2.1rem;
        }
        .header-content {
            padding: 1.5rem;
        }
        .card-content {
            padding: 1.2rem;
        }
    }
    
    @@media (max-width: 576px) {
        .content-wrapper {
            padding: 0.7rem;
        }
        .dashboard-title {
            font-size: 1.5rem;
            flex-direction: column;
            text-align: center;
        }
        .dashboard-title i {
            margin-bottom: 0.5rem;
            margin-right: 0;
        }
        .cards-grid {
            grid-template-columns: 1fr;
            gap: 0.7rem;
            width: 100%;
            max-width: 100%;
        }
        .header-content {
            padding: 0.7rem;
            text-align: center;
        }
        .dashboard-layout {
            width: 100%;
            margin-left: 0;
        }
    }
    
    /* Enhanced Sidebar Component Styles */
    .sidebar-header {
        padding: 1.5rem 1.25rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(255,255,255,0.05);
    }
    
    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .brand-icon {
        font-size: 1.5rem;
        color: #fff;
        background: rgba(255,255,255,0.15);
        padding: 0.5rem;
        border-radius: 8px;
        animation: pulse-brand 3s infinite;
    }
    
    .sidebar-title {
        margin: 0;
        font-weight: 700;
        color: #fff;
        font-size: 1.1rem;
        letter-spacing: 0.02em;
    }
    
    .sidebar-close-btn {
        background: rgba(255,255,255,0.1);
        border: none;
        color: #fff;
        padding: 0.5rem;
        border-radius: 8px;
        transition: all 0.2s ease;
        cursor: pointer;
    }
    
    .sidebar-close-btn:hover {
        background: rgba(255,255,255,0.2);
        transform: scale(1.1);
    }
    
    .sidebar-user-info {
        padding: 1.25rem;
        background: rgba(255,255,255,0.08);
        margin: 0 1rem 1rem 1rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 1rem;
        border: 1px solid rgba(255,255,255,0.1);
    }
    
    .user-avatar {
        position: relative;
        flex-shrink: 0;
    }
    
    .user-avatar i {
        font-size: 2.2rem;
        color: #fff;
    }
    
    .user-status-dot {
        position: absolute;
        bottom: 2px;
        right: 2px;
        width: 10px;
        height: 10px;
        background: #28a745;
        border: 2px solid #fff;
        border-radius: 50%;
        animation: pulse-status 2s infinite;
    }
    
    .user-details {
        flex: 1;
        min-width: 0;
    }
    
    .user-name {
        display: block;
        font-weight: 600;
        color: #fff;
        font-size: 0.95rem;
        margin-bottom: 0.2rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .user-role {
        display: block;
        font-size: 0.8rem;
        color: rgba(255,255,255,0.7);
        background: rgba(255,255,255,0.1);
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        display: inline-block;
    }
    
    .sidebar-content {
        padding: 0.5rem 0 1rem 0;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    
    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0 1rem;
        flex: 1;
    }
    
    .sidebar-menu-item {
        margin: 0.25rem 0;
        position: relative;
    }
    
    .sidebar-menu-item.active .sidebar-menu-link {
        background: rgba(255,255,255,0.15);
        color: #fff;
        font-weight: 600;
        transform: translateX(4px);
    }
    
    .sidebar-menu-item.active .menu-indicator {
        opacity: 1;
        transform: scaleY(1);
    }
    
    .sidebar-menu-link {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        color: rgba(255,255,255,0.85);
        text-decoration: none;
        transition: all 0.3s cubic-bezier(.4,0,.2,1);
        border-radius: 10px;
        font-size: 0.95rem;
        position: relative;
        overflow: hidden;
    }
    
    .sidebar-menu-link:hover, .sidebar-menu-link:focus {
        background: rgba(255,255,255,0.1);
        color: #fff;
        text-decoration: none;
        outline: none;
        transform: translateX(2px);
    }
    
    .menu-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.1);
        border-radius: 8px;
        margin-right: 0.75rem;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }
    
    .menu-icon i {
        font-size: 1.1rem;
        transition: transform 0.3s ease;
    }
    
    .sidebar-menu-link:hover .menu-icon {
        background: rgba(255,255,255,0.2);
        transform: scale(1.1);
    }
    
    .sidebar-menu-link:hover .menu-icon i {
        transform: scale(1.1);
    }
    
    .menu-text {
        flex: 1;
        font-weight: 500;
    }
    
    .menu-indicator {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%) scaleY(0);
        width: 3px;
        height: 20px;
        background: #fff;
        border-radius: 2px;
        opacity: 0;
        transition: all 0.3s ease;
    }
    
    /* Fix button styling to look like sidebar menu link */
    .sidebar-menu-link.btn.btn-link {
        padding: 0.75rem 1rem;
        text-decoration: none;
        border: none !important;
        box-shadow: none !important;
        color: rgba(255,255,255,0.85);
        border-radius: 10px;
        font-size: 0.95rem;
        justify-content: flex-start;
    }
    
