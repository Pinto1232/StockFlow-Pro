@page
@model AdminPanelModel
@using StockFlowPro.Web.Authorization
@using StockFlowPro.Web.Extensions
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="admin-panel-layout">
    <div class="admin-content-wrapper">
        <!-- Header -->
        <div class="admin-header">
            <h1 class="admin-title">Admin Panel</h1>
            <p class="admin-subtitle">Central hub for managing your application</p>
        </div>

        <!-- Welcome Banner -->
        <div class="welcome-banner">
            <div class="banner-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="banner-content">
                <h4 class="banner-title">Welcome, Admin!</h4>
                <p class="banner-text">You have full access to the system. Use these tools to manage your inventory, users, and reports.</p>
            </div>
        </div>

        <!-- Admin Cards -->
        <div class="admin-cards-grid">
            @if (User.HasPermission(StockFlowPro.Web.Authorization.Permissions.Users.ViewAll))
            {
                <!-- User Management Card -->
                <div class="admin-card">
                    <div class="card-icon-wrapper">
                        <i class="fas fa-users-cog card-icon"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">User Management</h5>
                        <p class="card-text">Manage system users, roles, and permissions to ensure security and proper access control.</p>
                        <a href="/ManageUsers" class="btn btn-primary">Go to Users</a>
                    </div>
                </div>
            }

            @if (User.HasPermission(StockFlowPro.Web.Authorization.Permissions.System.ViewAdminPanel))
            {
                <!-- Product Management Card -->
                <div class="admin-card">
                    <div class="card-icon-wrapper">
                        <i class="fas fa-box-open card-icon"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Product Management</h5>
                        <p class="card-text">Add, edit, and organize your product inventory, including stock levels and pricing.</p>
                        <a href="#" class="btn btn-success">Manage Products</a>
                    </div>
                </div>
            }

            @if (User.HasPermission(StockFlowPro.Web.Authorization.Permissions.Reports.ViewBasic))
            {
                <!-- Reports Card -->
                <div class="admin-card">
                    <div class="card-icon-wrapper">
                        <i class="fas fa-chart-pie card-icon"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Reports & Analytics</h5>
                        <p class="card-text">View detailed reports and analytics to gain insights into your business performance.</p>
                        <a href="#" class="btn btn-info">View Reports</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Full width layout */
    .admin-panel-layout {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        background-color: #f8f9fa;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .admin-content-wrapper {
        padding: 2rem 3rem;
        max-width: 100%;
        overflow-x: hidden;
    }

    .admin-header {
        text-align: center;
        margin-bottom: 3rem;
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border: 1px solid #e9ecef;
    }

    .admin-title {
        font-size: 3rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .admin-title::before {
        content: "⚙️";
        margin-right: 1rem;
        font-size: 2.5rem;
    }

    .admin-subtitle {
        font-size: 1.2rem;
        color: #6c757d;
        margin: 0;
    }

    .welcome-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        margin-bottom: 3rem;
    }

    .banner-icon {
        font-size: 3rem;
        margin-right: 1.5rem;
        opacity: 0.9;
    }

    .banner-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .banner-text {
        margin: 0;
        opacity: 0.9;
        line-height: 1.5;
    }

    /* Cards Grid Layout */
    .admin-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
        width: 100%;
    }

    .admin-card {
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.07);
        transition: all 0.4s ease;
        overflow: hidden;
        height: 100%;
        border: 1px solid #e9ecef;
    }

    .admin-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

    .card-icon-wrapper {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        text-align: center;
        padding: 2.5rem;
        position: relative;
    }

    .card-icon-wrapper::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-icon {
        font-size: 3.5rem;
        color: #667eea;
        opacity: 0.8;
    }

    .card-body {
        padding: 2rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        height: calc(100% - 120px);
    }

    .card-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .card-text {
        color: #6c757d;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .btn {
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
        width: 100%;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .btn-info {
        background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
        color: white;
    }

    .btn:hover {
        transform: translateY(-1px);
        text-decoration: none;
        color: white;
    }

    /* Responsive Design */
    @@media (min-width: 1200px) {
        .admin-content-wrapper {
            padding: 2rem 4rem;
        }
        
        .admin-title {
            font-size: 3.5rem;
        }
        
        .admin-cards-grid {
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2.5rem;
        }
    }

    @@media (max-width: 991.98px) {
        .admin-panel-layout {
            margin-left: calc(-50vw + 50%);
        }
        
        .admin-content-wrapper {
            padding: 1.5rem 2rem;
        }
        
        .admin-title {
            font-size: 2.5rem;
        }
        
        .admin-cards-grid {
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }
    }

    @@media (max-width: 576px) {
        .admin-content-wrapper {
            padding: 1rem;
        }
        
        .admin-title {
            font-size: 2rem;
            flex-direction: column;
            text-align: center;
        }
        
        .admin-title::before {
            margin-bottom: 0.5rem;
            margin-right: 0;
        }
        
        .admin-cards-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .admin-header {
            padding: 1.5rem;
        }
        
        .welcome-banner {
            flex-direction: column;
            text-align: center;
            padding: 1.5rem;
        }
        
        .banner-icon {
            margin-right: 0;
            margin-bottom: 1rem;
        }
        
        .admin-panel-layout {
            width: 100%;
            margin-left: 0;
        }
    }
</style>