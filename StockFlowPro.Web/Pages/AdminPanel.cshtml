    const confirmed = confirm('Are you sure you want to start a system backup?');
    if (confirmed) {
        showNotification('System backup initiated...', 'success');
        setTimeout(() => {
            showNotification('Backup completed successfully!', 'success');
            updateSystemStats();
        }, 3000);
    }
}

