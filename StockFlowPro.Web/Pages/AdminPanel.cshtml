@page
@model AdminPanelModel
@{
    ViewData["Title"] = "Admin Panel";
}

@functions {
    public class AdminPanelModel : Microsoft.AspNetCore.Mvc.RazorPages.PageModel
    {
        public IActionResult OnGet()
        {
            // Check if user is authenticated via cookie
            var isAdmin = Request.Cookies["IsAdmin"];
            
            if (string.IsNullOrEmpty(isAdmin) || isAdmin != "true")
            {
                return RedirectToPage("/Login");
            }
            
            return Page();
        }
    }
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 mb-0">Admin Panel</h1>  
            </div>
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Welcome, Admin!</h4>
                <p>You have successfully logged in and have access to the admin panel.</p>
                <hr>
                <p class="mb-0">From here you can manage your inventory system.</p>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">User Management</h5>
                            <p class="card-text">Manage system users and their permissions.</p>
                            <a href="#" class="btn btn-primary">Manage Users</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Product Management</h5>
                            <p class="card-text">Add, edit, and manage your product inventory.</p>
                            <a href="#" class="btn btn-primary">Manage Products</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Reports</h5>
                            <p class="card-text">View comprehensive reports and analytics.</p>
                            <a href="#" class="btn btn-primary">View Reports</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
