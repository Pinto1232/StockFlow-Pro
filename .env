# Docker Environment Configuration for StockFlow Pro
# Copy this file to .env and update values as needed

# Database Configuration
# IMPORTANT: Replace with your strong, unique password
DB_PASSWORD=your_strong_db_password
DB_NAME=StockFlowProDb
DB_USER=sa

# Redis Configuration
# IMPORTANT: Replace with your strong, unique password
REDIS_PASSWORD=your_strong_redis_password

# JWT Configuration
# IMPORTANT: Replace with a securely generated 32+ character key
JWT_SECRET_KEY=replace-with-a-secure-random-32-character-key
JWT_ISSUER=StockFlowPro
JWT_AUDIENCE=StockFlowPro-Users
JWT_EXPIRY_MINUTES=60

# Cookie Authentication
COOKIE_AUTH_NAME=StockFlowProAuth
COOKIE_SECURE=false

# Application Settings
USE_MOCK_DATA=false
ENABLE_SWAGGER=true
DETAILED_ERRORS=true
ASPNETCORE_ENVIRONMENT=Development

# API URLs
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# Email Configuration (for development)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_USE_SSL=false
SMTP_FROM_EMAIL=noreply@stockflowpro.local
SMTP_FROM_NAME=StockFlow Pro

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/wwwroot/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=Information
LOG_TO_CONSOLE=true
LOG_TO_FILE=true