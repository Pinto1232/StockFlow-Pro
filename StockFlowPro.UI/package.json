{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173 --strictPort",
    "dev:docker": "cross-env VITE_API_BASE_URL=http://localhost:5000/api VITE_WS_URL=ws://localhost:5000 vite --port 5173 --strictPort",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview --port 4173 --strictPort",
    "build:staging": "cross-env VITE_API_BASE_URL=/api vite build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "test": "vitest",
    "test:run": "vitest run",
    "test:integration": "vitest run src/architecture/__tests__/integration.test.ts",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix --audit-level moderate --force",
    "security:check": "npm audit && npm run lint",
    "security:update": "npm update && npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "generate": "plop"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@microsoft/signalr": "^8.0.7",
    "@tanstack/react-query": "^5.83.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "lucide-react": "^0.525.0",
    "moment": "^2.30.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-datetime": "^3.3.1",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "change-case": "^4.1.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "plop": "^4.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
