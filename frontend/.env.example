# API Configuration
VITE_API_BASE_URL=http://localhost:5131/api

# Architecture Configuration
# Set to 'false' to use legacy architecture, 'true' or omit to use new hexagonal architecture
VITE_USE_NEW_ARCHITECTURE=true

# SignalR Configuration
VITE_SIGNALR_HUB_URL=http://localhost:5131/stockflowhub

# Environment
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ADVANCED_REPORTING=true

# Permissions Configuration
# Set to 'true' to use dynamic permissions from backend, 'false' to use static hardcoded permissions
VITE_USE_DYNAMIC_PERMISSIONS=true